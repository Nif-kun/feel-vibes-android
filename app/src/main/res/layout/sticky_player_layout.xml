<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stickyPlayerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/BackgroundDayNight">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/coverArtView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_album_24"/>

            <TextView
                android:id="@+id/titleLabel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="18sp"
                android:text="@string/untitled"
                android:paddingHorizontal="10dp"/>

            <ImageButton
                android:id="@+id/skipPreviousBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                style="@style/IconButtonDayNight"
                android:src="@drawable/ic_skip_previous_24"/>

            <ImageButton
                android:id="@+id/playBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                style="@style/IconButtonDayNight"
                android:src="@drawable/ic_play_arrow_24"/>

            <ImageButton
                android:id="@+id/skipNextBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                style="@style/IconButtonDayNight"
                android:src="@drawable/ic_skip_next_24"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:progressDrawable="@drawable/progress_bar_color"
            android:indeterminate="false"
            android:progress="50" />

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.cardview.widget.CardView>